<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fill_authinfo_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="fill_authinfo_viewstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/line_bgcolor</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
    </style>

    <!--个人信息左侧-->
    <style name="leftlayout_infoLin" parent="MatchWrap.Horizontal">
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:paddingLeft">40px</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <style name="left_textStyle" parent="WrapWrap">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42px</item>
    </style>
    <!--我的工具样式-->
    <style name="home_centerlinStyle" parent="AutoWrap.Vertical">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
    </style>
    <style name="home_centerimgStyle">
        <item name="android:layout_width">60px</item>
        <item name="android:layout_height">60px</item>
    </style>
    <style name="home_centertxtStyle" parent="WrapWrap">
        <item name="android:layout_marginTop">22px</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">28px</item>
    </style>

    <!--我的应用-->
    <style name="home_myappImgStyle">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
    </style>

</resources>
