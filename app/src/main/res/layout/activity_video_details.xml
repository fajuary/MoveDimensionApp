<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/MatchMatch">



    <SurfaceView
        android:id="@+id/activity_videodetails_mSurfaceView"
        style="@style/MatchMatch"
        />
    <WebView
        android:id="@+id/activity_videodetails_mWebView"
        style="@style/MatchMatch"
        android:layout_marginTop="400px"
        >
    </WebView>
    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_marginTop="30px"
        >
        <RelativeLayout
            android:id="@+id/activity_videodetails_leftRelayout"
            android:layout_width="110px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/library_lefticon"
                />
        </RelativeLayout>
        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:id="@+id/activity_videodetails_shareRelayout"
            android:layout_width="130px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_share"
                />
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
