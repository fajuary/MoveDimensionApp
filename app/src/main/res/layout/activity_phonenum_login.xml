<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/MatchMatch.Vertical"
    android:background="@color/white"
    >
    <include layout="@layout/base_backleftnoright_headlayout"/>

    <LinearLayout
       style="@style/MatchWrap.Vertical"
        android:layout_marginTop="200px"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        >
        <LinearLayout
          android:layout_width="match_parent"
            android:layout_height="110px"
            android:orientation="horizontal"
            android:gravity="bottom"

            >
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/icon_phone"
                />
            <EditText
                android:id="@+id/activity_phonenumlogin_phonenumEdtxt"
                android:paddingLeft="10px"
                style="@style/AutoMatch"
                android:hint="手机"
                android:textColorHint="#999"
                android:textColor="#333"
                android:textSize="38px"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:gravity="bottom"
                android:maxLength="11"
                android:inputType="phone"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15px"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
           style="@style/MatchWrap.Horizontal"
            android:gravity="center"
            android:layout_marginTop="40px"
            >
            <LinearLayout
                style="@style/AutoWrap.Vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:orientation="horizontal"
                    android:gravity="center"

                    >
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/icon_verify"
                        />
                    <EditText
                        android:id="@+id/activity_phonenumlogin_codenumEdtxt"

                        style="@style/AutoMatch"
                        android:hint="验证码"
                        android:paddingLeft="10px"
                        android:textColorHint="#999"
                        android:textColor="#333"
                        android:background="@null"
                        android:textSize="38px"
                        android:textCursorDrawable="@null"
                        android:gravity="center_vertical"
                        android:inputType="textVisiblePassword"
                        android:digits="@string/digits_code"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/activity_phonenumlogin_getCodeTxt"

                style="@style/WrapWrap"
                android:text="获取验证码"
                android:background="@drawable/verificate_codeselect"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textColor="@color/white"
                android:textSize="32px"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/activity_phonenumlogin_loginTxt"

            style="@style/MatchWrap"
            android:layout_marginTop="150px"
            android:text="登 录"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="35px"
            android:paddingBottom="35px"
            android:textSize="38px"
            android:background="@drawable/phonenum_loginbgicon"
            />
    </LinearLayout>


</LinearLayout>
